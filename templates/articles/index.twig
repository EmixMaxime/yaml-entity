{% extends 'layout.twig' %}

{% block content %}

<div class="row">
  {% for art in datas %}
      <div class="col-md-4">
        <h2>{{ art.title }}</h2>
        <p>{{ art.content|raw }}</p>
        {% if art.another_variable is defined %}
			<p class="text-danger">{{ art.another_variable }}</p>
        {% endif %}
        <p><a class="btn btn-default" href="{{ siteUrl(art.url) }}" role="button">View details &raquo;</a></p>
      </div>
  {% endfor %}

{% endblock %}
